{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/v1/scene_metadata.schema.json",
  "title": "scene_metadata",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "total_keyframes",
    "frames"
  ],
  "properties": {
    "total_keyframes": {
      "type": "integer",
      "minimum": 0
    },
    "frames": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "frame_id",
          "timestamp",
          "file_path"
        ],
        "properties": {
          "frame_id": {
            "type": "integer",
            "minimum": 1
          },
          "timestamp": {
            "type": "string",
            "pattern": "^\\d{2}:[0-5]\\d:[0-5]\\d\\.\\d{3}$"
          },
          "file_path": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
