{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/v1/audio_transcripts.schema.json",
  "title": "audio_transcripts",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "start",
      "end",
      "text"
    ],
    "properties": {
      "start": {
        "type": "string",
        "pattern": "^\\d{2}:[0-5]\\d:[0-5]\\d\\.\\d{3}$"
      },
      "end": {
        "type": "string",
        "pattern": "^\\d{2}:[0-5]\\d:[0-5]\\d\\.\\d{3}$"
      },
      "text": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
