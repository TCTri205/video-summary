{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/v1/summary_video_manifest.schema.json",
  "title": "summary_video_manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "source_video_path",
    "output_video_path",
    "keep_original_audio",
    "segments"
  ],
  "properties": {
    "source_video_path": {
      "type": "string",
      "minLength": 1
    },
    "output_video_path": {
      "type": "string",
      "minLength": 1
    },
    "keep_original_audio": {
      "type": "boolean",
      "const": true
    },
    "segments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "segment_id",
          "source_start",
          "source_end",
          "script_ref"
        ],
        "properties": {
          "segment_id": {
            "type": "integer",
            "minimum": 1
          },
          "source_start": {
            "type": "string",
            "pattern": "^\\d{2}:[0-5]\\d:[0-5]\\d\\.\\d{3}$"
          },
          "source_end": {
            "type": "string",
            "pattern": "^\\d{2}:[0-5]\\d:[0-5]\\d\\.\\d{3}$"
          },
          "script_ref": {
            "type": "integer",
            "minimum": 1
          },
          "transition": {
            "type": "string",
            "enum": [
              "cut",
              "fade"
            ]
          }
        }
      }
    }
  }
}
